{
	"linters": {
		"disable-all": true,
		"enable": [
			"govet",
			"golint",
			"goimports",
			"misspell",
			"ineffassign",
			"gofmt",
			"staticcheck",
			"bodyclose",
			"gosimple",
			"prealloc",
			"deadcode",
			"errcheck",
			"gosec"
		]
	},
	"run": {
		"skip-files": [
			"/zz_generated_"
		],
		"skip-dirs": [
			"generated"
		],
		"deadline": "5m",
		"tests": true,
		"build-tags": [
			"test"
		]
	}
}
