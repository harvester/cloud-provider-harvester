{
	"linters": {
		"disable-all": true,
		"enable": [
			"govet",
			"goimports",
			"misspell",
			"ineffassign",
			"gofmt",
			"staticcheck",
			"bodyclose",
			"gosimple",
			"prealloc",
			"errcheck",
			"gosec"
		]
	},
	"issues": {
		"exclude-files": [
			"/zz_generated_"
		],
		"exclude-dirs": [
			"generated"
		]
	},
	"run": {
		"timeout": "5m",
		"tests": true,
		"build-tags": [
			"test"
		]
	}
}
